@page "/"
@model Chirp.Razor.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    int next = Model.page + 2;
    int previous = Model.page;
}

<div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="cheepbox">
            <h3>What's on your mind @(Model.Username)?</h3>
            <form method="post">
                <input required style="float: left" type="text" asp-for="cheepDTO.Text" maxlength="160">
                <input type="submit" value="Share">
            </form>
        </div>
    }
    
    <h2> Public Timeline </h2>
    
    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <div>
                                <a href="/@cheep.Author">@cheep.Author</a>
                                @if (User.Identity.IsAuthenticated && !Model._authorService.isSelf(Model.Username, cheep.Author) && cheep.Author != "[DELETED]")
                                {
                                    <form method="post">
                                        <button class="button" asp-page-handler="ToggleFollow">
                                            @if (Model._authorService.isFollowing(Model.Username, cheep.Author))
                                            {
                                                <span>UnFollow</span>
                                            }
                                            else
                                            {
                                                <span>Follow</span>
                                            }
                                        </button>
                                        <input type="hidden" name="self" value="@Model.Username"/>
                                        <input type="hidden" name="follow" value="@cheep.Author"/>
                                    </form>
                                }
                            </div>
                        </strong>
                        <div style="word-wrap: break-word;">
                            @cheep.Text
                        </div>
                        <small>&mdash; @cheep.Timestamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    <div>
        @if (previous > 0)
        {
            <a href="?page=@previous" class="button" style="text-decoration: none">
                <button style="color: white;">◀</button>
            </a>
        }
        else
        {
            <a href="?page=@previous" class="button" style="text-decoration: none">
                <button style="color: white; background-color: dimgrey">◀</button>
            </a>
        }
        @(previous+1)
        <a href="?page=@next" class="button" style="text-decoration: none">
            <button style="color: white;">▶</button>
        </a>
    </div>
</div>
