@using Chirp.Infrastructure
@using Chirp.Razor.Pages
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/images/cheeper.png">
</head>
<body>
<div class=page>
    <h1><img src="/images/cheeper.png" alt="Chirp!"/>Chirp!</h1>
    
    <div class=navigation>
        @if (User.Identity is { IsAuthenticated: true })
        {
            <div>
                <a href="/">PUBLIC TIMELINE</a> | 
                <a href="/@(Model.Username)">MY TIMELINE</a> | 
                <a href="/AboutMe">ABOUT ME</a>

                <span style="float:right">
                    <a style="text-align: right" href="/Identity/Account/Logout" >LOGOUT [@(Model.Username)]</a>
                </span>
            </div>
        }
        else
        {
            <div>
                <a href="/">PUBLIC TIMELINE</a> | 
                <a href="/Identity/Account/Register" >REGISTER</a> | 
                <a href="/Identity/Account/Login" >LOGIN</a> 
            </div>
        }
    </div>
    
    <div class=body>
        @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
